{
  "manifest_version": 2,

  "name": "TrashBlock",
  "version": "0.1.0",
  "description": "Get rid of internet trash",

  "permissions": [
    "storage",
    "unlimitedStorage",
    "contextMenus"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_popup": "config.html"
  },

  "content_scripts": [
    {
      "css": ["styles.css"],
      "js": ["content.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    }
  ]
}
